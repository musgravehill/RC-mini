$(function(){$main_ctr=$("#main_container");window.scrollNode=$(document);window._stlLeft=$("#stl_left");window._stlBg=$("#stl_bg");window._stlText=$("#stl_text");window._stlActive=false;window._stlBottom=0;window._stlLastpos=null;window.__scrLeft=0;window._stlLeft.click(_stlClick);updSideTopLink(1);$(window).resize(function(){updSideTopLink(1)});window.scrollNode.scroll(function(){updSideTopLink()})});
function updSideTopLink(a){if(!(!window.scrollNode||$.browser.mobile)){var d=$main_ctr.offset(),c=scrollNode.scrollTop(),b=scrollNode.scrollLeft();if(a||b!=__scrLeft){a=d.left;_stlLeft.css({display:a<100?"none":"block",left:0,width:Math.max(a,0),height:$(window).height()});__scrLeft=b}a=b=0;if(c>400){if(c>500)a=1;b=(c-400)/400;if(b>0){_stlText.text(gettext("\u041d\u0430\u0432\u0435\u0440\u0445"));_stlText.removeClass("down");_stlLeft.hasClass("over")&&_stlLeft.addClass("over_fast")}_stlLastpos=null}else if(c<
300&&_stlLastpos!=null){a=1;b=(400-c)/400;if(b>0){_stlText.text(gettext("\u041d\u0430\u0437\u0430\u0434"));_stlText.addClass("down");_stlLeft.toggleClass("over_fast",!!_stlLeft.hasClass("over"))}}if(a!==_stlActive||_stlLastpos!=null)_stlLeft.toggleClass("stl_active",!!(_stlActive=a));_stlLeft.css({opacity:Math.min(Math.max(b,0),1)})}}
function _stlClick(){if(_stlActive&&_stlLastpos==null){_stlLastpos=$(window).scrollTop();$(window).scrollTop(0)}else{window.scrollTo(0,_stlLastpos);_stlLastpos=null}};
